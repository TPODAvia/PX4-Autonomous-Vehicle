<?xml version="1.0"?>
<launch>

    <!-- Posix SITL environment launch script -->
    <!-- launches PX4 SITL, Gazebo environment, and spawns vehicle -->
    <!-- vehicle pose -->
    <!-- <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0.1"/>
    <arg name="R" default="0"/>
    <arg name="P" default="0"/>
    <arg name="Y" default="0"/> -->
    <!-- vehicle model and world -->
    <arg name="vehicle" default="frame450"/>
    <!-- Any world: empty, flat, city, forest etc -->
    <arg name="world" default="$(find px4_sim)/worlds/empty.world"/>

    <!-- gazebo configs -->
    <arg name="gui" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="paused" default="false"/>
    <!-- Gazebo sim -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="paused" value="$(arg paused)"/>
		<arg name="world_name" default="$(arg world)" />
		<arg name="gui" value="$(arg gui)"/>
		<arg name="verbose" value="true"/>
	</include>

    <!-- UAV0 -->
    <group ns="uav0">
        <!-- PX4 SITL and Gazebo -->
        <include file="$(find px4_sim)/launch/5mavros_posix_only.launch">
            <arg name="ID" default="0"/>
            <arg name="x" value="1"/>
            <arg name="y" value="0"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="sdf" default="$(find px4_sim)/models/$(arg vehicle)/$(arg vehicle).sdf"/>
            <arg name="avoidance" default="false"/>
            <!-- <arg name="mavlink_udp_port" value="14561"/> -->
            <!-- <arg name="mavlink_tcp_port" value="4561"/> -->

            <!-- <arg name="gst_udp_port" value="5600"/> -->
            <!-- <arg name="video_uri" value="5600"/> -->
            <!-- <arg name="mavlink_cam_udp_port" value="14530"/> -->

        </include>

        <!-- Pixhawk setup -->
        <!-- <include file="$(find px4_air)/launch/3mission_QGCaruco.launch"> -->
            <!-- <arg name="fcu_conn" value="sitl"/> -->
            <!-- <arg name="fcu_ip" value="127.0.0.1"/> -->
            <!-- <arg name="tgt_system" value="1"/> -->
            <!-- <arg name="gcs_bridge" value=""/> -->
        <!-- </include> -->
    </group>

    <!-- UAV1 -->
    <group ns="uav1">
        <include file="$(find px4_sim)/launch/5mavros_posix_only.launch">
            <arg name="ID" default="1"/>
            <arg name="x" value="2"/>
            <arg name="y" value="0"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="sdf" default="$(find px4_sim)/models/$(arg vehicle)/$(arg vehicle)_1.sdf"/>
            <arg name="avoidance" default="false"/>

        </include>
    </group>

    <!-- UAV2 -->
